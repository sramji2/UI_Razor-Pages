@page
@model UIAssignmentRazorPages.Pages.Categories.sramji2CategoriesModel
@{
}
<h1>Northwind Categories</h1>

<table border= "1">
    <tr class="table-secondary">
        <th>Category Name</th>
        <th>Description</th>
        <th>Picture</th>

    </tr>

    @foreach (var item in Model.Categories)
    {
<tr>
    <td>@item.CategoryName</td>

    <td>@item.Description</td>
    <td>
        <img src="data:image/png;base64,@Convert.ToBase64String(item.Picture,78, item.Picture.Length -78)" />
    </td>
    @*<td>@item.Picture</td>*@
</tr>


    }
    
</table>